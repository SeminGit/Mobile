<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSight">

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="8dp"
        android:onClick="addSight"
        android:text="CREATE"
        app:layout_constraintTop_toBottomOf="@+id/newSightFacts"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/newSightNameLabel"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:text="name"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/newSightName"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="name"
        app:layout_constraintTop_toBottomOf="@+id/newSightNameLabel"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/newSightShortLabel"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:text="short"
        app:layout_constraintTop_toBottomOf="@+id/newSightName"
        tools:layout_editor_absoluteX="9dp" />

    <EditText
        android:id="@+id/newSightShort"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="short"
        app:layout_constraintTop_toBottomOf="@+id/newSightShortLabel"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/newSightLongLabel"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="4dp"
        android:text="long"
        app:layout_constraintTop_toBottomOf="@+id/newSightShort"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/newSightLong"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="long"
        app:layout_constraintTop_toBottomOf="@+id/newSightLongLabel"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/newSightContactLabel"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:text="contact"
        app:layout_constraintTop_toBottomOf="@+id/newSightLong"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/newSightContact"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="contact"
        app:layout_constraintTop_toBottomOf="@+id/newSightContactLabel"
        tools:layout_editor_absoluteX="9dp" />

    <TextView
        android:id="@+id/newSightFactsLabel"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="8dp"
        android:text="facts"
        app:layout_constraintTop_toBottomOf="@+id/newSightContact"
        tools:layout_editor_absoluteX="9dp" />

    <EditText
        android:id="@+id/newSightFacts"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="facts"
        app:layout_constraintTop_toBottomOf="@+id/newSightFactsLabel"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>